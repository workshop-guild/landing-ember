<div class="page">
  <h1>Login</h1>
  <form {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      <label for="identification">Login</label>
      {{input value=identification placeholder='Email' class='form-control'}}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input value=password placeholder='Password' class='form-control' type='password'}}
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
    {{link-to 'Register' 'register' class='btn btn-link' }}
  </form>
</div>